generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription
  plan                String   @default("free") // "free" | "pro"
  stripeCustomerId    String?  @unique
  stripeSubscriptionId String? @unique
  stripePriceId       String?
  stripeCurrentPeriodEnd DateTime?
  cancelAtPeriodEnd   Boolean  @default(false)

  accounts Account[]
  sessions Session[]
  forms    Form[]
  subscriptions Subscription[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Form {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  fields    Field[]
  responses Response[]
  settings  FormSettings?

  @@index([userId])
  @@index([slug])
  @@map("forms")
}

model Field {
  id          String  @id @default(cuid())
  type        String
  label       String
  placeholder String?
  required    Boolean @default(false)
  order       Int
  options     Json?

  formId String
  form   Form   @relation(fields: [formId], references: [id], onDelete: Cascade)

  fieldValues FieldValue[]

  @@index([formId])
  @@map("fields")
}

model Response {
  id          String   @id @default(cuid())
  submittedAt DateTime @default(now())

  formId String
  form   Form   @relation(fields: [formId], references: [id], onDelete: Cascade)

  fieldValues FieldValue[]

  @@index([formId])
  @@map("responses")
}

model FieldValue {
  id    String @id @default(cuid())
  value String @db.Text

  responseId String
  response   Response @relation(fields: [responseId], references: [id], onDelete: Cascade)

  fieldId String
  field   Field  @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@index([responseId])
  @@index([fieldId])
  @@map("field_values")
}

model FormSettings {
  id          String  @id @default(cuid())

  // Notificações
  notifyEmail  String?
  notifyEmails String[] @default([])
  webhookUrl   String?

  // Comportamento: permitir botão "Enviar outra resposta" na tela de sucesso
  allowMultipleResponses Boolean @default(false)

  // PRO: Anti-spam / CAPTCHA
  captchaEnabled   Boolean @default(false)
  captchaProvider  String? // "turnstile" | "hcaptcha"
  captchaSiteKey   String?
  captchaSecretKey String?

  // PRO: Branding
  hideBranding Boolean @default(false)

  // PRO: Custom Theme (JSON com cores personalizadas)
  // { primaryColor, backgroundColor, cardBackground, textColor, accentColor, borderRadius }
  customTheme Json?

  formId String @unique
  form   Form   @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@map("form_settings")
}

model Subscription {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe data
  stripeSubscriptionId String   @unique
  stripeCustomerId     String
  stripePriceId        String
  stripeCurrentPeriodStart DateTime
  stripeCurrentPeriodEnd   DateTime

  // Subscription details
  status    String // "active" | "canceled" | "incomplete" | "incomplete_expired" | "past_due" | "trialing" | "unpaid"
  plan      String // "pro"

  cancelAtPeriodEnd Boolean @default(false)
  canceledAt        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([stripeSubscriptionId])
  @@map("subscriptions")
}

model PaymentHistory {
  id        String   @id @default(cuid())
  userId    String

  // Stripe data
  stripePaymentIntentId String   @unique
  stripeInvoiceId       String?

  // Payment details
  amount        Int      // in cents
  currency      String   @default("usd")
  status        String   // "succeeded" | "pending" | "failed"
  description   String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@map("payment_history")
}
