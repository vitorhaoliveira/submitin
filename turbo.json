{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "node_modules/.prisma/**"],
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "AUTH_RESEND_KEY",
        "EMAIL_FROM",
        "AUTH_URL",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false,
      "outputs": []
    },
    "db:push": {
      "cache": false
    }
  }
}

